<div class="container">
  <div class='mx-auto col-md-5'>
    <h1>設備編集</h1>
    <tr>
      <%= form_with model: [:admin, @equipment], local:true do |f| %>
        <div class="form-group">
          <%= f.label :"設備名" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.submit "変更を保存", class: 'btn btn-info' %>
        </div>
      <% end %>
    </tr>
  </div>
</div>