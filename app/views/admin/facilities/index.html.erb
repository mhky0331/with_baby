<div class="container">
  <h1>施設一覧</h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>施設ID</th>
          <th>施設名</th>
        </tr>
      </thead>
      <tbody>
        <% @facilities.each do |facility| %>
          <tr>
            <td><%= facility.id %></td>
            <td><%= link_to facility.name, admin_facility_path(facility.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= paginate @facilities, theme: 'twitter-bootstrap-4' %>
</div>