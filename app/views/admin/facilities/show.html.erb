<div class='container'>
  <h1>施設詳細</h1>
  <div class='row'>
    <div class='col-md-4'>
      <%= image_tag @facilities.facility_photos, size: '250x150' %>
    </div>
    <div class='col-md-6'>
      <table class="table">
        <tr>
          <td>施設名</td>
          <td><%= @facilities.name %></td>
        </tr>
        <tr>
          <td>施設説明</td>
          <td><%= @facilities.content %></td>
        </tr>
        <tr>
          <td>緯度</td>
          <td><%= @facilities.latitude %></td>
        </tr>
        <tr>
          <td>経度</td>
          <td><%= @facilities.longitude %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class='text-center'>
  <%= link_to "編集する", edit_admin_facilities_path, class: 'btn btn-success' %>
</div>
<div class='text-center'>
  <%= link_to '削除する', @facility, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger"%>
</div>