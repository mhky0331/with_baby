<div class='container'>
  <h1>施設詳細</h1>
  <div class='row'>
    <div class='col-md-4'>
      <% if @facility.facility_photos.attached? %>
        <% @facility.facility_photos.each do |facility_photo| %>
          <%= image_tag facility_photo, size: '250x150' %>
        <% end %>
      <% end %>
    </div>
    <div class='col-md-6'>
      <table class="table">
        <tr>
          <td>施設名</td>
          <td><%= @facility.name %></td>
        </tr>
        <tr>
          <td>施設説明</td>
          <td><%= @facility.content %></td>
        </tr>
        <tr>
          <td>緯度</td>
          <td><%= @facility.latitude %></td>
        </tr>
        <tr>
          <td>経度</td>
          <td><%= @facility.longitude %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class='text-center'>
  <%= link_to "編集する", edit_admin_facility_path, class: 'btn btn-success' %>
</div>
<div class='text-center'>
  <%= link_to '削除する', admin_facility_path, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger"%>
</div>