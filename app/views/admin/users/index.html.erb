<div class="container">
  <h1>会員一覧</h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>会員名</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name,admin_user_path(user.id) %></td>
            <td>
              <% if user.email == 'guest@example.com'%>
      　         <p></p>
              <% else %>
                <% if user.is_active %>
                  利用停止中
                <% else %>
                  利用中
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= paginate @users %>
</div>