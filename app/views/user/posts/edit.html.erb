<div class="container">
  <div class='mx-auto col-md-7'>
    <h1>投稿編集</h1>
    <%= form_with model: @posts, url :user_posts_path(@posts), method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :投稿画像 %>
        <%= f.file_field :posted_photos, class: "form-control-file", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :投稿内容 %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="form-group m-5">タグ</div>
      <div class="row d-flex justify-content-start m-5">
        <%= f.collection_check_boxes(:equipment_ids, Equipment.all, :id, :facility_equipments) do |equipment| %>
          <div class="form-check form-check-inline flex flex-wrap">
              <%= equipment.label do %>
                <%= equipment.check_box %>
                <%= equipment.text %>
              <% end %>
          </div>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>