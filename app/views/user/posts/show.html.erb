<div class='container'>
  <h1>投稿詳細</h1>
  <div class='row'>
    <div class='col-md-4'>
      <%= image_tag @posts.posted_photo, size: '250x150' %>
    </div>
    <div class='col-md-6'>
      <table class="table">
        <tr>
          <td>投稿内容</td>
          <td><%= @posts.content %></td>
          <td>コメント数： <%= @book.book_comments.count %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class='text-center'>
  <%= link_to "編集する", edit_user_posts_path, class: 'btn btn-success' %>
</div>
<div class='text-center'>
  <%= link_to '削除する', @post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger"%>
</div>
<div class='text-center'>
</div>
<div class='text-center'>
  <%= render 'comments/index', comments: @comments %>
  <%= render "comments/form", post: @post, comment: @comment %>
</div>