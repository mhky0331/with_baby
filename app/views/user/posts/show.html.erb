<div class='container'>
  <h1>投稿詳細</h1>
  <div class='row'>
    <div class='col-md-4'>
      <% if @post.posted_photos.attached? %>
        <%= image_tag @post.posted_photos[0], size: '250x150' %>
      <% else %>
        <%= image_tag 'no_image', size: "250x150" %>
      <% end %>
    </div>
    <div class='col-md-6'>
      <table class="table">
        <tr>
          <td>投稿内容</td>
          <td><%= @post.content %></td>
          <td>設備</td>
          <td>
            <% @post.equipments.each do |equipment| %>
              <%= equipment.name %>
            <% end %>
          </td>
          <td>コメント数： <%= @post.comments.count %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% if @post.user == current_user %>
  <div class='text-center'>
    <%= link_to "編集する", edit_user_post_path(@post), class: 'btn btn-success' %>
  </div>
  <div class='text-center'>
    <%= link_to '削除する', user_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger"%>
  </div>
<% else %>
  <div></div>
  <div></div>
<% end %>
<div class='text-center'>
</div>
<div class='text-center'>
  <%= render "user/comments/form",   post: @post, comment: @comment %>
  <%= render 'user/comments/index', comments: @comments %>
</div>