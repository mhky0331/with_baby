<div class='col-md-8'>
  <div class='row'>
    <h1>新規投稿</h1>
    <%= form_with model: @posts, url:user_posts_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :投稿画像 %>
        <%= f.file_field :posted_photo, class: "form-control-file", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :投稿内容 %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録",class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>