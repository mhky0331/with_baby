<div class='col-md-8'>
  <h1>新規投稿</h1>
  <div class='row'>
    <%= form_with model: @posts, url:user_posts_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :投稿画像 %>
        <%= f.file_field :posted_photos, class: "form-control-file", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :投稿内容 %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="form-group m-5">タグ</div>
      <div class="row d-flex justify-content-start m-5">
        <%= f.collection_check_boxes(:equipment_ids, Equipment.all, :id, :name) do |equipment| %>
          <div class="form-check form-check-inline flex flex-wrap">
              <%= equipment.label do %>
                <%= equipment.check_box %>
                <%= equipment.text %>
              <% end %>
          </div>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録",class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>