<div class="container">
  <h1>投稿一覧</h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>投稿ID</th>
          <th>投稿内容</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.content %></td>
            <td id="favorite_btn_<%= post.id %>">
            <%= render "favorites/btn", post: @post %>
            </td>
            <td>コメント数： <%= @post.comments.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= paginate @posts %>
</div>