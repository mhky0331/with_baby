<div class="container">
  <h1>施設一覧</h1>
  <%= link_to new_user_facility_path, class: "btn" do %>
    <i class="fas fa-plus"></i>施設登録
  <% end %>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>施設名</th>
      </tr>
    </thead>
    <tbody>
      <% @facility.each do |facility| %>
        <tr
          data-controller="href"
          data-action="click->href#toHref"
          data-href="<%= user_facility_path(facility.id) %>"
          tabindex="0"
          role="link"
          style="cursor: pointer;">
          <td><%= link_to facility.name, user_facility_path(facility.id), data: { controller: 'event', action: 'event#stopPropagation' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @facilities, theme: 'twitter-bootstrap-4' %>
</div>

