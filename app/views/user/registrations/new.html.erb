<div class = "container">
  <div class="d-flex align-items-end" style="height:60px;">
  <h1>New-Baby</h1>
  </div>
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "user/shared/error_messages", resource: resource %>
    <table class = "table">
      <div class = "row">
        <div class = "col-9">
          <tr>
            <div class="field">
              <td><%= f.label :"画像" %></td>
              <td><%= f.file_field :profile_image, autofocus: true, accept: "image/*" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :"赤ちゃんの名前" %></td>
              <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :"メールアドレス" %></td>
              <td><%= f.email_field :email, autocomplete: "email" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :"パスワード" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上 )</em></td>
                <% end %><br />
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td><%= f.label :パスワード確認用入力 %></td><br />
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </div>
          </tr>
          <tr>
            <td><%#= render "user/shared/links" %></td>
            <div class="actions">
              <td><%= f.submit "登録",class: 'btn btn-success' %></td>
            </div>
          </tr>
        </div>
      </div>
    </table>
  <% end %>
</div>