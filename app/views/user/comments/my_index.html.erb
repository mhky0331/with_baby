<div class="container">
  <h1>コメント一覧</h1>
  <div id="comments">
  <table class='table table-hover table-inverse'>
    
    <div class="container">
      <div class = "row">
      
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>コメントID</th>
            <th>投稿内容</th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.post.id %></td>
              <div class = "col-4">
                <td><%= comment.content %></td>
              </div>
              <td>
                <% if comment.user == current_user %>
                  <%= link_to "削除", user_post_comment_path(comment.post_id, id: comment.id), class: "btn btn-sm btn-danger float-end", method: :delete , remote:true, data: {"turbolinks" => false} %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
       </div>
    </div>
    
  </table>
  </div>
</div>