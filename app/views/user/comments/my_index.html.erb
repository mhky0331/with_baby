<div class="container">
  <table class='table table-hover table-inverse'>
    <div class="container">
      <div class = "row">
      <h1>コメント一覧</h1>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>名前</th>
            <th>コメントID</th>
            <th>投稿内容</th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td>
                <%= link_to user_user_path(comment.user) do %>
                  <%= image_tag comment.user.get_profile_image(50,50), size: "50x50" %><br>
                  <%= comment.user.name %>
                <% end %>
              </td>
              <td><%= comment.post.id %></td>
              <div class = "col-4">
                <td><%= comment.content %></td>
              </div>
              <td>
                <% if comment.user == current_user %>
                  <%= link_to "削除", user_post_comment_path(comment.post_id, id: comment.id), class: "btn btn-sm btn-danger float-end", method: :delete , remote:true, data: {"turbolinks" => false} %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
       </div>
    </div>
  </table>
</div>