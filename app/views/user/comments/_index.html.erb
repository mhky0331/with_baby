 <div class="container">
  <h1></h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>名前</th>
          <th>投稿内容</th>
        </tr>
      </thead>
      <tbody>
        <% comments.each do |comment| %>
          <tr>
            <td>
              <%= image_tag comment.user.get_profile_image(50,50), size: "50x50" %><br>
              <%= comment.user.name %>
            </td>
            <td><%= comment.content %></td>
            <td>
              <% if comment.user == current_user %>
                <%= link_to "削除", user_post_comment_path(comment.post_id, id: comment.id), class: "btn btn-sm btn-danger float-end", method: :delete , remote:true, data: {"turbolinks" => false} %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<%= paginate comments %>
