<% if facility.favorited_by?(current_user) %>
  <%= link_to user_facility_favorite_path(facility), method: :delete, remote: true, data: {"turbolinks" => false} do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= facility.favorites.count %> お気に入り
  <% end %>
<% else %>
  <%= link_to user_facility_favorites_path(facility), method: :post, remote: true, data: {"turbolinks" => false} do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= facility.favorites.count %> お気に入り
  <% end %>
<% end %>